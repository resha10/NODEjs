<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>View Books</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" />

  <style>
    /* ==== Global Styles ==== */
    body {
      background: linear-gradient(135deg, #74b9ff, #a29bfe, #ffeaa7);
      background-size: 400% 400%;
      animation: gradientFlow 10s ease infinite;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      font-family: "Poppins", sans-serif;
      padding: 30px;
    }

    @keyframes gradientFlow {
      0% {
        background-position: 0% 50%;
      }

      50% {
        background-position: 100% 50%;
      }

      100% {
        background-position: 0% 50%;
      }
    }

    /* ==== Container ==== */
    .table-container {
      width: 95%;
      max-width: 900px;
      background: rgba(255, 255, 255, 0.2);
      backdrop-filter: blur(15px);
      padding: 40px 30px;
      border-radius: 20px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
      transition: all 0.3s ease;
    }

    .table-container:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 50px rgba(0, 0, 0, 0.2);
    }

    /* ==== Heading ==== */
    h2 {
      text-align: center;
      color: #2d3436;
      font-weight: 700;
      margin-bottom: 25px;
      text-shadow: 1px 1px 2px rgba(255, 255, 255, 0.6);
    }

    /* ==== Table Styles ==== */
    table {
      width: 100%;
      border-collapse: collapse;
      border-radius: 12px;
      overflow: hidden;
    }

    thead {
      background: linear-gradient(90deg, #0984e3, #6c5ce7);
      color: white;
    }

    th,
    td {
      text-align: center;
      vertical-align: middle;
      padding: 12px;
    }

    tbody tr {
      background: rgba(255, 255, 255, 0.6);
      transition: all 0.2s ease;
    }

    tbody tr:hover {
      background: rgba(255, 255, 255, 0.85);
      transform: scale(1.01);
    }

    /* ==== Buttons ==== */
    .btn {
      border-radius: 8px;
      font-weight: 600;
      letter-spacing: 0.4px;
      padding: 6px 12px;
      transition: 0.3s ease;
    }

    .btn-warning {
      background: linear-gradient(90deg, #fbc531, #e1b12c);
      border: none;
      color: #fff;
    }

    .btn-warning:hover {
      background: linear-gradient(90deg, #e1b12c, #fbc531);
      transform: scale(1.05);
    }

    .btn-danger {
      background: linear-gradient(90deg, #ff7675, #d63031);
      border: none;
      color: #fff;
    }

    .btn-danger:hover {
      background: linear-gradient(90deg, #d63031, #ff7675);
      transform: scale(1.05);
    }

    .btn-primary {
      background: linear-gradient(90deg, #0984e3, #6c5ce7);
      border: none;
      border-radius: 12px;
      font-weight: 600;
      letter-spacing: 0.5px;
      transition: 0.3s ease;
      padding: 10px 15px;
    }

    .btn-primary:hover {
      background: linear-gradient(90deg, #6c5ce7, #0984e3);
      transform: scale(1.03);
      box-shadow: 0 5px 15px rgba(9, 132, 227, 0.3);
    }

    /* ==== Footer Section ==== */
    .text-center a {
      width: 100%;
    }

    /* ==== Responsive ==== */
    @media (max-width: 768px) {
      .table-container {
        padding: 25px;
      }

      table {
        font-size: 0.9rem;
      }

      h2 {
        font-size: 1.6rem;
      }
    }

    @media (max-width: 576px) {
      th,
      td {
        font-size: 0.8rem;
        padding: 8px;
      }
    }
  </style>
</head>

<body>
  <div class="table-container">
    <h2>ðŸ“š View All Books</h2>

    <table class="table table-hover align-middle">
      <thead>
        <tr>
          <th>Id</th>
          <th>Book Name</th>
          <th>Author</th>
          <th>Price (â‚¹)</th>
          <th>Pages</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% books.map((book, i) => { const { id, book_name, book_author, book_price, book_pages } = book; %>
        <tr>
          <td><%= ++i %></td>
          <td><%= book_name %></td>
          <td><%= book_author %></td>
          <td><%= book_price %> â‚¹</td>
          <td><%= book_pages %></td>
          <td>
            <a href="/editBook?Id=<%= id %>" class="btn btn-warning btn-sm">Edit</a>
            <a href="/deleteBook?deleteId=<%= id %>" class="btn btn-danger btn-sm">Delete</a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="text-center mt-4">
      <a href="/add" class="btn btn-primary">Add New Book</a>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
